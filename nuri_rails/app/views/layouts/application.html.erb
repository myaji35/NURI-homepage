        --color-background-shade: #ECEBEA;
        --color-border: #E5E5E5;
        --spacing-small: 0.75rem;
        --spacing-medium: 1rem;
        --spacing-large: 1.5rem;
        --spacing-x-large: 2rem;
        --radius-border: 0.25rem;
        --shadow-card: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

